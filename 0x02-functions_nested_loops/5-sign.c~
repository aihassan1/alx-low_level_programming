#include "main.h"

/**
 * print_sign - Checks the sign of a number.
 *
 * Description: Checks if a number is positive, negative, or zero.
 *
 * @n: The number to be checked.
 *
 * Return: 1 if n is positive, -1 if n is negative, 0 if n is zero.
 */
int print_sign(int n)
{
if (n < 0 )
{
_putchar ('-');
return (-1);
}
else if (n == 0)
{
_putchar ('0');
return (0);
}
else 
{
_putchar ('+');
return (1);
}
}
